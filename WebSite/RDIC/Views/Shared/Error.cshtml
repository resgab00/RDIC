@{
    ViewBag.Title = (!String.IsNullOrEmpty(ViewBag.StatusCode)) ? ViewBag.StatusCode : "500 Error";
    Layout = "~/Views/Shared/_Layout.cshtml";}
}
@model System.Web.Mvc.HandleErrorInfo

@section Content{
    <div class="row">
        <div class="content">
            <div class="container login">
                <h1>ERROR</h1>
                <h2 class="error">@(!String.IsNullOrEmpty(ViewBag.StatusCode) ? ViewBag.StatusCode : "500 Error"):</h2>
                <div class="box_white">
                    <span><font color="red" size="8"> Si è verificato un problema durante la richiesta. Riprovare e se il problema persiste non esitare a contattarci a questo indirizzo: <a href="mailto:info@RDICsrl.com">info@RDICsrl.com</a></font></span>
                    <div id="errorDetailContainer">&nbsp;
                        <div id="errorDetail">
                            <span>
                                @Model.Exception.Message<br />
                                @Model.Exception.StackTrace<br />
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(
            function () {
                $("#errorDetail").hide();
                $("#errorDetailContainer").click(
                    function () {
                        $("#errorDetail").show();
                    }
                );
            }
        );
    </script>
}